<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Poliglot.MainPage"
             xmlns:local="clr-namespace:Poliglot">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <local:WordDeskView x:Name="WordStack" Grid.ColumnSpan="2" Margin="10"/>

        <Grid Grid.Row="1">

            <Button x:Name="ImportButton" Text="Import Words" Margin="10"/>
            <Button x:Name="SaveProgressButton" Text="Save progress" Margin="10" Grid.Column="1"/>
            <Button x:Name="BlockWordButton" Text="Block Word" Margin="10" Grid.Column="2"/>
            <Button x:Name="BlockSentenceButton" Text="Block Sentence" Margin="10" Grid.Column="2"/>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</ContentPage>
